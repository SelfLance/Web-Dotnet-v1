@model List<WebApp_v1.Models.Item>;
@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price.ToString("N2") $</td>
                <td> <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> </td>
                <td> <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> </td>

                @* <td>@item.Category</td> *@

                @* <td>
                    <a href="@Url.Action("Edit", "Items", new { id = item.Id })">Edit</a> |
                    <a href="@Url.Action("Details", "Items", new { id = item.Id })">Details</a> |
                    <a href="@Url.Action("Delete", "Items", new { id = item.Id })">Delete</a>
                </td> *@
            </tr>
        }
    </tbody>
</table>
